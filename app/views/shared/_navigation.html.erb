<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"> Home</a>
      <a class="navbar-brand" href="/questions"> Questions</a>
      <a class="navbar-brand" href="/"> Meetups</a>
      <a class="navbar-brand" href="/articles"> Articles</a>

       <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
         <%= form_tag(articles_path, :method => "get", id: "nav-search") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Search Articles" %>
         <%= submit_tag "Search"%>
         <% end %>
          <input type="text" class="form-control" id="nav-search" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default" id="search-submit">Submit</button>
      </form>

      <% if @articles.present? %>
       <%= render @articles %>
       <% else %>
       <p> There are no posts containing the term(s) <%= params{:search}%> </p>
       <% end %>

    </div>  
  </div>  
</nav>  
